{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-subagents.local/schemas/skill-marketplace.schema.json",
  "title": "Skill Marketplace Entry",
  "description": "Full skill definition for Stack Marketplace listings. Combines identity (from SKILL.md frontmatter) with metadata for catalog display.",
  "type": "object",
  "required": ["id", "name", "description"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Skill ID in format: category/name (@author)",
      "minLength": 1,
      "examples": ["frontend/react (@vince)", "backend/api-hono (@vince)"]
    },
    "name": {
      "type": "string",
      "description": "Display name from SKILL.md frontmatter",
      "minLength": 1,
      "examples": ["frontend/react (@vince)", "Zustand"]
    },
    "description": {
      "type": "string",
      "description": "Brief description from SKILL.md frontmatter",
      "minLength": 1,
      "examples": [
        "Component architecture, hooks, patterns",
        "Hono routes, OpenAPI, Zod validation"
      ]
    },
    "category": {
      "$ref": "#/$defs/SkillCategory",
      "description": "Category for marketplace filtering"
    },
    "author": {
      "type": "string",
      "description": "Author handle (with @ prefix)",
      "minLength": 1,
      "examples": ["@vince", "@photoroom"]
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "examples": ["1.0.0", "2.1.0-beta.1"]
    },
    "tags": {
      "type": "array",
      "description": "Discoverability tags",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true,
      "examples": [["state-management", "hooks", "lightweight"]]
    },
    "requires": {
      "type": "array",
      "description": "Hard dependencies - skill IDs that must be present",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "compatible_with": {
      "type": "array",
      "description": "Soft recommendations - skills this works well with",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "conflicts_with": {
      "type": "array",
      "description": "Mutual exclusions - skills that cannot coexist",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    }
  },
  "$defs": {
    "SkillCategory": {
      "type": "string",
      "description": "Valid skill category names",
      "enum": [
        "frontend",
        "backend",
        "security",
        "shared",
        "setup",
        "research"
      ]
    }
  }
}
