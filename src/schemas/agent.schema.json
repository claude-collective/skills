{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-subagents.local/schemas/agent.schema.json",
  "title": "Agent Definition",
  "description": "Schema for agent.yaml files in agents/{category}/{id}/agent.yaml. Supports official Claude Code plugin format.",
  "type": "object",
  "required": ["id", "title", "description", "tools"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique agent identifier (kebab-case)",
      "minLength": 1,
      "examples": ["frontend-developer", "backend-reviewer", "pm"]
    },
    "title": {
      "type": "string",
      "description": "Human-readable agent name",
      "minLength": 1,
      "examples": ["Frontend Developer Agent", "Backend Reviewer Agent"]
    },
    "description": {
      "type": "string",
      "description": "Purpose and behavior - shown in Task tool description",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "description": "Claude model to use. Use 'inherit' to use parent model.",
      "default": "inherit",
      "enum": ["opus", "sonnet", "haiku", "inherit"]
    },
    "tools": {
      "type": "array",
      "description": "Tools available to this agent",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "Read",
          "Write",
          "Edit",
          "Grep",
          "Glob",
          "Bash",
          "WebSearch",
          "WebFetch",
          "Task",
          "TaskOutput"
        ]
      }
    },
    "disallowed_tools": {
      "type": "array",
      "description": "Tools this agent cannot use (overrides tools list)",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "Read",
          "Write",
          "Edit",
          "Grep",
          "Glob",
          "Bash",
          "WebSearch",
          "WebFetch",
          "Task",
          "TaskOutput"
        ]
      }
    },
    "permission_mode": {
      "type": "string",
      "description": "Permission mode for agent operations",
      "default": "default",
      "enum": [
        "default",
        "acceptEdits",
        "dontAsk",
        "bypassPermissions",
        "plan",
        "delegate"
      ]
    },
    "hooks": {
      "type": "object",
      "description": "Lifecycle hooks for agent execution",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/HookDefinition"
        }
      }
    }
  },
  "$defs": {
    "HookDefinition": {
      "type": "object",
      "description": "Hook definition with matcher and hook actions",
      "properties": {
        "matcher": {
          "type": "string",
          "description": "Tool name or pattern to match for this hook"
        },
        "hooks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/HookAction"
          }
        }
      }
    },
    "HookAction": {
      "type": "object",
      "description": "Individual hook action to execute",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of hook action",
          "enum": ["command", "script", "prompt"]
        },
        "command": {
          "type": "string",
          "description": "Command to execute (for type: command)"
        },
        "script": {
          "type": "string",
          "description": "Script path to execute (for type: script)"
        },
        "prompt": {
          "type": "string",
          "description": "Prompt to display (for type: prompt)"
        }
      }
    }
  }
}
